{
	"name": "@asmelabs/pushkin",
	"version": "0.0.0-alpha.3",
	"description": "A simple, interpreted programming language written in TypeScript",
	"author": "Mehdi Asadli <asadlimehdi25@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/asmelabs/pushkin#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/asmelabs/pushkin.git"
	},
	"bugs": {
		"url": "https://github.com/asmelabs/pushkin/issues"
	},
	"keywords": [
		"pushkin",
		"programming-language",
		"interpreter",
		"lexer",
		"parser",
		"language",
		"typescript"
	],
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsup": "^8.5.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"scripts": {
		"prepare": "husky",
		"release": "bun run build && changeset publish",
		"version-packages": "changeset version",
		"build": "tsup",
		"check": "biome check --write .",
		"test": "bun test"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,css,md}": [
			"biome check --write ."
		]
	},
	"type": "module",
	"bin": {
		"pushkin": "dist/cli.js"
	}
}
